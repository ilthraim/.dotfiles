# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume_status"
order += "arch_updates"
order += "wireless _first_"
order += "battery_level"
order += "external_script"
order += "diskdata"
order += "loadavg"
order += "sysdata"
order += "clock"

volume_status {
	cache_timeout = 1
}

arch_updates { 
	format = "UPD: {total}" 
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery_level {
        format = '{icon} {percent} {time_remaining}'
}

external_script {
	format = '{output}'
	script_path = "~/.scripts/i3status_optimus.sh"
}

diskdata {
        disk = "nvme1n1p2"
	format = '[\?color=free {free}] '
	format += '[\?color=total {total}]'
}

loadavg {
    format = '[\?color=1avg {1avg}%] '
    format += '[\?color=5avg {5avg}%] '
    format += '[\?color=15avg {15avg}%]'
}

sysdata {
	format = '[\?color=mem_used_percent Mem: {mem_used}/{mem_total} {mem_total_unit}]'
}

clock {
       
}
